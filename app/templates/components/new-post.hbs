{{#if addNewPost}}
<form>
  <label for="title">Title:</label>
  {{input value=title type="text" id="title"}}
  <label for="author">Author:</label>
  {{input value=author type="text" id="author"}}
  <label for="text">Text:</label>
  {{input value=text type="text" id="text"}}
  <label for="image">Image:</label>
  {{input value=image type="text" id="image"}}
  <button {{action "savePost"}}>Add post</button>

</form>
{{else}}
  <button {{action 'postFormShow'}}>New Rental</button>
{{/if}}
