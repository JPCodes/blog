{{#if addNewComment}}
<h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="username">Username</label>
        {{input value=username id="username"}}
      </div>
      <div class="form-group">
        <label for="text">Text</label>
        {{input value=text id="text"}}
      </div>
      <button {{action 'saveComment'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
